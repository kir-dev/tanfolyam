<div class="container">
  <h2 class="header">Új dohany felvétele</h2>
  <div class="container" id="form-container">
    <div class="row">

      <div class="col-md-9">
        <%= form_for @flavor do |f| %>

          <div class="row form-group">
            <div class="col-md-2">
              <label for="name" class="pull-right">Neve</label>
            </div>
            <div class="col-md-10">
              <%= f.text_field :name, required: true, class: 'form-control' %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-2">
              <label for="name" class="pull-right">Márkája</label>
            </div>
            <div class="col-md-10">
              <%= f.text_field :brand, class: 'form-control' %>
            </div>
          </div>
          <%= f.submit 'Dohány felvétele', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
